<Window x:Class="HotelMS.AddGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Guest" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Guest ID -->
            <Label Content="Guest ID:" />
            <TextBox x:Name="GuestIdTextBox" />

            <!-- Name -->
            <Label Content="Name:" />
            <TextBox x:Name="NameTextBox" />

            <!-- Phone Number -->
            <Label Content="Phone Number:" />
            <TextBox x:Name="PhoneNumberTextBox" />

            <!-- Email -->
            <Label Content="Email:" />
            <TextBox x:Name="EmailTextBox" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Click="Save_Click" Margin="5" Width="80" />
                <Button Content="Cancel" Click="Cancel_Click" Margin="5" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>