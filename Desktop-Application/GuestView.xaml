<UserControl x:Class="HotelMS.GuestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <DataGrid x:Name="GuestsGrid" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column" 
                  IsReadOnly="True" 
                  SelectionMode="Single" 
                  Background="White" 
                  BorderBrush="#A67C52"
                  BorderThickness="2">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Guest ID" Binding="{Binding GuestId}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Phone Number" Binding="{Binding PhoneNumber}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" 
                                        Click="EditGuest_Click" 
                                        Margin="5" 
                                        Padding="5" 
                                        Background="#A67C52" 
                                        Foreground="White" />
                                <Button Content="Delete" 
                                        Click="DeleteGuest_Click" 
                                        Margin="5" 
                                        Padding="5" 
                                        Background="#E74C3C" 
                                        Foreground="White" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Add Guest" 
                Click="AddGuest_Click" 
                Margin="0,10,0,0" 
                Padding="10" 
                Background="#A67C52" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
    </StackPanel>
</UserControl>
