<UserControl x:Class="HotelMS.RoomsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <!-- DataGrid to display rooms -->
        <DataGrid x:Name="RoomsGrid" 
                  AutoGenerateColumns="False" 
                  HeadersVisibility="Column" 
                  IsReadOnly="True" 
                  SelectionMode="Single" 
                  Background="White" 
                  BorderBrush="#A67C52"
                  BorderThickness="2">
            <DataGrid.Columns>
                <!-- Room ID -->
                <DataGridTextColumn Header="Room ID" Binding="{Binding RoomId}" />
                <!-- Room Number -->
                <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" />
                <!-- Room Type -->
                <DataGridTextColumn Header="Room Type" Binding="{Binding RoomType}" />
                <!-- Fix: Use TextColumn -->
                <!-- Price Per Night -->
                <DataGridTextColumn Header="Price Per Night" Binding="{Binding PricePerNight}" />
                <!-- Is Occupied -->
                <DataGridCheckBoxColumn Header="Occupied" Binding="{Binding IsOccupied}" IsReadOnly="True" />
                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit" 
                                        Click="EditRoom_Click" 
                                        Margin="5" 
                                        Padding="5" 
                                        Background="#A67C52" 
                                        Foreground="White" />
                                <Button Content="Delete" 
                                        Click="DeleteRoom_Click" 
                                        Margin="5" 
                                        Padding="5" 
                                        Background="#E74C3C" 
                                        Foreground="White" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add Room Button -->
        <Button Content="Add Room" 
                Click="AddRoom_Click" 
                Margin="0,10,0,0" 
                Padding="10" 
                Background="#A67C52" 
                Foreground="White" 
                BorderBrush="Transparent" 
                FontWeight="Bold" />
    </StackPanel>
</UserControl>