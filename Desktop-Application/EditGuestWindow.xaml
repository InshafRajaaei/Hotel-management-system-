<Window x:Class="HotelMS.EditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Guest" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>

            <Label Content="Guest ID:" />
            <TextBox x:Name="GuestIdTextBox" Text="{Binding GuestId}" IsReadOnly="True" />

            <Label Content="Name:" />
            <TextBox x:Name="NameTextBox" Text="{Binding Name}" />

            <Label Content="Phone Number:" />
            <TextBox x:Name="PhoneNumberTextBox" Text="{Binding PhoneNumber}" />

            <Label Content="Email:" />
            <TextBox x:Name="EmailTextBox" Text="{Binding Email}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Click="Save_Click" Margin="5" Width="80" />
                <Button Content="Cancel" Click="Cancel_Click" Margin="5" Width="80" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>