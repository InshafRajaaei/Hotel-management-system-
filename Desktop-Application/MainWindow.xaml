<Window x:Class="HotelMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management System" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#ffffff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#A67C52" Padding="25">
            <StackPanel>
                <Image Source="/Assets/Images/logo1.png" 
                       Width="70" 
                       Height="70" 
                       Margin="0,0,0,0" 
                       HorizontalAlignment="Center" />
                <TextBlock Text="Hotel Rayal Park" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" />
                <TextBlock Text="Management System" 
                           FontSize="18" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#8C6745" Width="150">
                <Button x:Name="RoomsButton" 
                        Content="Rooms" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderBrush="#A67C52"
                        BorderThickness="2" 
                        Margin="5" 
                        Padding="10" 
                        HorizontalAlignment="Stretch" 
                        Click="TabButton_Click" />

                <Button x:Name="GuestsButton" 
                        Content="Guests" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderBrush="#A67C52"
                        BorderThickness="2" 
                        Margin="5" 
                        Padding="10" 
                        HorizontalAlignment="Stretch" 
                        Click="TabButton_Click" />

                <Button x:Name="BookingsButton" 
                        Content="Bookings" 
                        Background="Transparent" 
                        Foreground="White" 
                        BorderBrush="#A67C52"
                        BorderThickness="2" 
                        Margin="5" 
                        Padding="10" 
                        HorizontalAlignment="Stretch" 
                        Click="TabButton_Click" />
            </StackPanel>

            <Border Grid.Column="1" 
                    Background="#ffffff" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="10"
                    BorderBrush="#A67C52"
                    BorderThickness="2">
                <ContentControl x:Name="ContentArea" />
            </Border>
        </Grid>
    </Grid>
</Window>
